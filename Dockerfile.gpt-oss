# Imagem para GPT-OSS (exemplo com vLLM)
FROM vllm/vllm-openai:latest

WORKDIR /app

# Copy configuration
COPY config/gpt-oss-config.yaml .

# Expose standard OpenAI API port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:8000/health || exit 1

# Run vLLM with GPT-OSS model
CMD ["vllm", "serve", "--model", "gpt-oss", "--host", "0.0.0.0", "--port", "8000"]